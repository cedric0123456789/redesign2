            const target = btn.getAttribute('data-tab');
            document.getElementById(target).classList.add('active');
          });
        });
      });
    </script>
    <script>
      // 1. Ziel-Datum aus dem data-Attribut holen
      const countdownEl = document.querySelector('.countdown');
      const targetDate = new Date(countdownEl.dataset.target);
    
      // 2. Hilfsfunktion für führende Null
      function pad(n) {
        return n.toString().padStart(2, '0');
      }
    
      // 3. Update-Funktion
      function updateCountdown() {
        const now = new Date();
        const diff = targetDate - now;
    
        if (diff <= 0) {
          // Countdown abgelaufen
          document.querySelectorAll('.countdown-zahl').forEach(el => el.textContent = '00');
          clearInterval(intervalId);
          return;
        }
    
        const days    = Math.floor(diff / (1000 * 60 * 60 * 24));
        const hours   = Math.floor((diff / (1000 * 60 * 60)) % 24);
        const minutes = Math.floor((diff / (1000 * 60)) % 60);
        const seconds = Math.floor((diff / 1000) % 60);
    
        const values = [days, hours, minutes, seconds];
        const zahlEls = countdownEl.querySelectorAll('.countdown-zahl');
    
        // Werte in die DOM-Elemente schreiben
        zahlEls.forEach((el, i) => {
          el.textContent = pad(values[i]);
        });
      }
    
      // 4. Intervall starten
      updateCountdown(); // gleich initial updaten
      const intervalId = setInterval(updateCountdown, 1000);
    </script>
